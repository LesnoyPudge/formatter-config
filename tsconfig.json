{
    "include": [
        "./src/**/*",
        "node_modules/@types"
    ],
    "compilerOptions": {
        "pretty": true,
        "explainFiles": false,
        "baseUrl": ".",
        "paths": {
            // "@root": ["src/index.ts"]
        },

        "types": [
            // "@lesnoypudge/types-global-base",
        ],

        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "verbatimModuleSyntax": false,
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "auto",

        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": true,

        "noEmit": false,
        "outDir": "build",
        "sourceMap": false,
        "declaration": false,

        // "moduleResolution": "NodeNext",
        // "module": "NodeNext",

        "moduleResolution": "Bundler",
        "module": "ESNext",

        "lib": [
            "ES2022",
            // "DOM",
            // "DOM.Iterable"
        ],
    }
}